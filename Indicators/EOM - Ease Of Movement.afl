function EaseOfMovement(Period)
{
  MidPointMove  = ( H + L ) / 2  -  Ref( ( H + L ) / 2, -1 );
  Vadj = Volume / 10000;
  BoxRatio = VAdj / ( 8 * ( H - L ) );
  return EMA( MidPointMove / BoxRatio, Period );
}

Plot( EaseOfMovement( Param("Period", 14, 2, 100 ) ), _DEFAULT_NAME(), ParamColor("Color", ColorCycle ) );